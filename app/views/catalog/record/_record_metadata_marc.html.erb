<div class="record-metadata row">
  <div class="record-panels col-md-4">
    <%= render "catalog/record/metadata_panels" %>
  </div>
  <div class="record-sections col-md-8">
    <% if @document.respond_to?(:to_marc) %>
      <%= render "catalog/record/marc_metadata_sections" %>
      <%= render partial: "catalog/record/marc_tags" %>
      <%= render partial: "catalog/record/marc_user_comments" %>      
    <% end %>
  </div>
</div>

<% if @document.holdings.browsable_callnumbers.present? %>
  <%= render 'catalog/record/callnumber_browse' %>
<% end %>
